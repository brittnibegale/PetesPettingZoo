@{
    ViewBag.Title = "Stripe";
}

<h2>Stripe</h2>

<form action="/Payment/Charge" method="POST">
    <article>
        <label>Payment Amount: $ @*AMOUNT*@</label>
    </article>
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key="@ViewBag.StripePublishKey"
            data-locale="auto"
            data-description="Ticket Charge"
            data-amount="@*AMOUNT*@">
    </script>
</form>